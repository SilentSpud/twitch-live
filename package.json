{
  "name": "twitch-live",
  "version": "3.0.0",
  "author": "Silent Spud",
  "description": "Twitch TV extension for displaying a user's favorite channels which are currently live.",
  "license": "MIT",
  "scripts": {
    "build": "bun build --target=browser --outdir=ext/scripts/ --minify --splitting src/background.ts src/options.ts src/popup.ts",
    "dev": "bun build --target=browser --outdir=ext/scripts/ --watch src/background.ts src/options.ts src/popup.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SilentSpud/twitch-live.git"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "latest",
    "@types/firefox-webext-browser": "latest",
    "@types/webextension-polyfill": "latest",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "webextension-polyfill": "latest"
  }
}